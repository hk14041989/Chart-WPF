<Window x:Class="Graph01.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="WPF-Graph" Height="350" Width="335" Loaded="Window_Loaded">
    <Grid Background="LightGreen">
        <Canvas Name="canGraph" Background="White" Width="300" Height="200" VerticalAlignment="Center" HorizontalAlignment="Center"></Canvas>
        <Button x:Name="open_chart" Width="100" Height="30" VerticalAlignment="Bottom" HorizontalAlignment="Center" Click="OpenChart" Margin="0,0,0,10" Content="Open Chart!"></Button>
    </Grid>
</Window>
